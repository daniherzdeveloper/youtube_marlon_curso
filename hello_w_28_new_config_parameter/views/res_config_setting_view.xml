                    <div class="app_settings_block" string="Config Parameter" data-key="hello_w_28_new_config_parameter">
                        <h2>New Config Parameter</h2>
                        <div class="row mt16 o_settings_container" name="record_creation">
                        <div class="col-6 col-lg-6 o_setting_box" id="record_creation">
                                <div class="o_setting_right_pane">
                                    <label for="record_type"/>
                                    <field name="record_type"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>




