<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="model_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page my-3">
                            <h2>
                                <span t-if="o.name != '/'" t-field="o.name"/>
                            </h2>
                            <div id="informations" class="row mt-4 mb-4">
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong t-if="o.date">Date:</strong>
                                    <p class="m-0" t-field="o.date"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong t-if="o.user_id">Generated by:</strong>
                                    <p class="m-0" t-field="o.user_id"/>
                                </div>
                            </div>
                                <table class="table table-sm o_main_table table-borderless">
                                    <thead>
                                        <tr>
                                            <th class="text-start"><span>Name</span></th>
                                            <th class="text-start"><span>Description</span></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.line_ids" t-as="line">
                                            <tr>
                                                <td>
                                                    <span t-esc="line.name"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line.description"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>